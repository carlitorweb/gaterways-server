{
    "compilerOptions": {
        "target": "es5",
        "module": "commonjs",
        "lib": ["esnext"],
        "allowJs": false,
        "outDir": "build",
        "rootDir": "src",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "resolveJsonModule": true,
        "baseUrl": "./src",
        "paths": {
            "*": ["../node_modules/*", "types/*"],
            "@lib/*": ["lib/*"],
            "@controllers/*": ["controllers/*"],
            "@models/*": ["models/*"],
            "@prismaClient": ["models/client"],
            "@routes/*": ["routes/*"]
        }
    }
}
